<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow_abstract"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/app_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/app_name"
        android:textColor="#002fd9"
        android:textSize="50sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/new_game_button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_design"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/new_game"
        android:textColor="@drawable/text_color_main"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/continue_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_game_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_design"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/continue_button"
        android:textColor="@drawable/text_color_main"
        android:textStyle="bold" />

    <Button
        android:id="@+id/settings_button_main"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/continue_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_design"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/settings"
        android:textColor="@drawable/text_color_main"
        android:textStyle="bold" />

    <fragment
        android:id="@+id/adFragment"
        android:name="com.nasko.naz.belotscore.AdFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/fragment_ad" />
</RelativeLayout>

